<%= partial(:input) %>

<% unless @promo.empty? %>
  <div class="result">
    <h2>And the winner is...</h2>
    <hr class="thin"/>

    <p>
      <span class="label">Winner</span>
      <span class="value"><%= @promo.winner.name %></span>
    </p>

    <hr class="thin"/>

    <p>
      <span class="label">Twitte</span>
      <span class="value"><a href="<%= @promo.winner.twitte %>"><%= @promo.winner.twitte %></a></span>
    </p>

    <hr class="thin"/>
    <p>
      <span class="label">Twittes</span>
      <span class="value" style="width:100px;"><%= @promo.twittes.size %></span>
    </p>
    <hr class="thin"/>
  </div>
<% else %>
  <h2 class="not-found">
    Sorry, your egg has no birds. 
    We didn't find the hashtag <%= @promo.hashtag %>
  </h2>
<% end %>
